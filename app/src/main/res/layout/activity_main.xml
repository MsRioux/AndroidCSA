<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">

    <Button
        android:id="@+id/button1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="topClick"
        android:text="@string/click_me"
        tools:layout_editor_absoluteX="75dp"
        tools:layout_editor_absoluteY="139dp"
        tools:onClick="topClick" />

    <Button
        android:id="@+id/button2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="bottomClick"
        android:text="@string/no_click_me"
        tools:layout_editor_absoluteX="75dp"
        tools:layout_editor_absoluteY="139dp"
        tools:onClick="bottomClick" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/greetings_program"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/nextButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Go to 2nd" />

    <Button
        android:id="@+id/toAct3Btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Go To Activity 3" />

</LinearLayout>